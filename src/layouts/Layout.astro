---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
const url = Astro.url.pathname;
---

<script src='../js/dark-theme-switcher' is:inline></script>

<html lang='en'>
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class={`min-h-screen flex flex-col justify-between items-center p-2 md:p-8 theme-minimalist ${
      url === "/" ? "homepage" : ""
    } `}
  >
    <Header title={title} />
    <main class='flex-1 py-10 md:py-20 px-2 max-w-full md:max-w-3xl'>
      <slot />
    </main>

    <Footer />
  </body>
</html>
